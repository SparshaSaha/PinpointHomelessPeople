<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/name_foodwastage_provider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/quantity_foodwastage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/phone_foodwastage_provider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/name_foodwastage_provider"
        android:layout_marginTop="15dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/address_food_wastage_provider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/phone_foodwastage_provider"
        android:layout_alignStart="@+id/quantity_foodwastage"
        android:text="TextView" />

    <TextView
        android:id="@+id/type_of_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/phone_foodwastage_provider"
        android:layout_below="@+id/phone_foodwastage_provider"
        android:layout_marginTop="30dp"
        android:text="TextView" />
</RelativeLayout>