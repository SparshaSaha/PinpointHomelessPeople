<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <SurfaceView
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:id="@+id/sv_showFood"
        android:background="@color/colorPrimaryDark"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/nameofhomeless"
        android:textColor="@android:color/white"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:textSize="30sp"/>


    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameofhomeless"
        android:layout_marginTop="15dp"
        android:layout_alignStart="@id/nameofhomeless"
        android:id="@+id/ph_no"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>
    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ph_no"
        android:layout_marginTop="15dp"
        android:id="@+id/address"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_alignStart="@id/nameofhomeless"
        />
    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mytype"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="80dp"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="35dp"
        android:layout_below="@id/mytype"
        android:id="@+id/quantity"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:layout_marginEnd="10dp"/>
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@id/sv_showFood">
        <include layout="@layout/activity_my__map"/>
        </RelativeLayout>


</RelativeLayout>